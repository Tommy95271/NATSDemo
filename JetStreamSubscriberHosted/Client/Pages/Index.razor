@page "/"

<PageTitle>Index</PageTitle>
<div class="demo-section k-form k-form-vertical">
    <div class="k-form-field">
        <label for="category" class="k-label k-form-label">Stream</label>
        <div class="k-form-field-wrap">
            <TelerikDropDownList Data="@streamNames"
                                 @bind-Value="@selectedStreamName"
                                 OnChange="getSubjects"
                                 DefaultText="請選擇 Stream"
                                 Id="stream"
                                 Width="100%">
            </TelerikDropDownList>
        </div>
    </div>
    <div class="k-form-field">
        <label for="product" class="k-label k-form-label">Subject</label>
        <div class="k-form-field-wrap">
            <TelerikDropDownList Data="@subjectNames"
                                 @bind-Value="@selectedSubjectName"
                                 Enabled="selectedStreamName is not null"
                                 OnChange="getConsumers"
                                 DefaultText="請選擇 Subject"
                                 Id="subject"
                                 Width="100%"
                                 TextField="Text"
                                 ValueField="Value"
                                 TValue="string"
                                 TItem="DropdownViewModel">
            </TelerikDropDownList>
        </div>
    </div>
    <div class="k-form-field">
        <label for="order" class="k-label k-form-label">Consumer</label>
        <div class="k-form-field-wrap">
            <TelerikDropDownList Data="@consumerNames"
                                 @bind-Value="@selectedConsumerName"
                                 Enabled="selectedStreamName is not null"
                                 DefaultText="請選擇 Consumer"
                                 Id="consumer"
                                 Width="100%"
                                 TextField="Text"
                                 ValueField="Value"
                                 TValue="string"
                                 TItem="DropdownViewModel">
            </TelerikDropDownList>
        </div>
    </div>
</div>
